#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
#
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.
#
# Modified to make a template file for a multi-binary package with separated
# build-arch and build-indep targets  by Bill Allombert 2001

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

INDEP_STAMPS=

ARCH_STAMPS=fiji-packarch-stamp

configure : configure-stamp

configure-stamp :
	dh_testdir
	touch configure-stamp

build : build-arch build-indep

build-arch : build-arch-stamp

build-arch-stamp : configure-stamp
	sh Fake.sh
	touch $@

build-indep : build-indep-stamp

build-indep-stamp : configure-stamp
	touch $@

clean :
	dh_testdir
	dh_testroot
	rm -f build-arch-stamp build-indep-stamp configure-stamp install-arch-stamp install-indep-stamp
	rm -f $(INDEP_STAMPS) $(ARCH_STAMPS)
	sh Fake.sh clean
	rm -f fjij fiji.o
	dh_clean

install : install-indep-stamp install-arch-stamp

install-indep-stamp : build-indep-stamp
	dh_testdir
	dh_testroot
	dh_clean -k -i
	dh_installdirs -i
	# $(MAKE) DESTDIR=$(CURDIR)/debian/fiji install-fiji
	dh_install -i
	touch install-indep-stamp

DESTDIR=$(CURDIR)/debian/fiji

install-arch-stamp : build-arch-stamp
	dh_testdir
	dh_testroot
	dh_clean -k -s
	dh_installdirs -s
	install -d $(DESTDIR)/usr/bin/
	install -m 755 fiji $(DESTDIR)/usr/bin/fiji.binary
	install -m 755 debian/simple-launcher $(DESTDIR)/usr/bin/fiji
	install -d $(DESTDIR)/usr/lib/fiji/
	cp -rv plugins $(DESTDIR)/usr/lib/fiji/
	cp -rv jars $(DESTDIR)/usr/lib/fiji/
	cp -rv macros $(DESTDIR)/usr/lib/fiji/
	cp -rv images $(DESTDIR)/usr/lib/fiji/
	install -d $(DESTDIR)/usr/lib/fiji/java/linux/
	cp -rv java/linux/* $(DESTDIR)/usr/lib/fiji/java/linux/
	install -d $(DESTDIR)/usr/share/doc/fiji/
	install -m 644 ij.jar $(DESTDIR)/usr/lib/fiji/
	install -m 644 LICENSES $(DESTDIR)/usr/share/doc/fiji/
	install -m 644 NOTES $(DESTDIR)/usr/share/doc/fiji/
	install -m 644 README $(DESTDIR)/usr/share/doc/fiji/
	install -m 644 TODO $(DESTDIR)/usr/share/doc/fiji/
	dh_install -s
	touch install-arch-stamp

%-packindep-stamp : build-indep-stamp install-indep-stamp
	dh_testdir -p$*
	dh_testroot -p$*
	dh_installchangelogs -p$*
	dh_installdocs -p$*
	dh_installexamples -p$*
#	dh_installmenu -p$*
#	dh_installdebconf	 -p$*
#	dh_installlogrotate	 -p$*
#	dh_installemacsen -p$*f
#	dh_installpam -p$*
#	dh_installmime -p$*
#	dh_python -p$*
#	dh_installinit -p$*
#	dh_installcron -p$*
#	dh_installinfo -p$*
	dh_installman -p$*
	dh_link -p$*
	dh_strip -p$*
	dh_compress  -p$*
	dh_fixperms -p$*
#	dh_perl -p$*
	dh_makeshlibs -p$*
	dh_installdeb -p$*
	dh_shlibdeps -p$*
	dh_gencontrol -p$*
	dh_md5sums -p$*
	dh_builddeb -p$*
	touch $@

# Build architecture independant packages using the common target.
binary-indep : $(INDEP_STAMPS)

%-packarch-stamp : build-arch-stamp install-arch-stamp
	dh_testdir -p$*
	dh_testroot -p$*
	dh_installchangelogs -p$*
	dh_installdocs -p$*
	dh_installexamples -p$*
#	dh_installmenu -p$*
#	dh_installdebconf	 -p$*
#	dh_installlogrotate	 -p$*
#	dh_installemacsen -p$*
#	dh_installpam -p$*
#	dh_installmime -p$*
#	dh_python -p$*
#	dh_installinit -p$*
#	dh_installcron -p$*
#	dh_installinfo -p$*
	dh_installman -p$*
	dh_link -p$*
	dh_strip -p$*
	dh_compress  -p$*
	dh_fixperms -p$*
#	dh_perl -p$*
	dh_makeshlibs -p$*
	dh_installdeb -p$*
	dh_shlibdeps -p$*
	dh_gencontrol -p$*
	dh_md5sums -p$*
	dh_builddeb -p$*
	touch $@

# Build architecture dependant packages using the common target.
binary-arch : $(ARCH_STAMPS)

binary : binary-arch binary-indep

.PHONY : build clean binary-indep binary-arch binary install install-indep install-arch configure
